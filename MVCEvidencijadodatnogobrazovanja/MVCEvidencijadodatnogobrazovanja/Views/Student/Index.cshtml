@model IEnumerable<MVCEvidencijadodatnogobrazovanja.Models.Student>

@{
    ViewBag.Title = "Lista studenata";
}

<h2>Lista studenata</h2>

<p>
    @Html.ActionLink("Dodaj novog studenta", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ustanova.PodrucjeRada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImeiPrezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JMBAG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumIzdavanja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GodinaStudija)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ustanova.PodrucjeRada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImeiPrezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JMBAG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumIzdavanja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GodinaStudija)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.ID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
