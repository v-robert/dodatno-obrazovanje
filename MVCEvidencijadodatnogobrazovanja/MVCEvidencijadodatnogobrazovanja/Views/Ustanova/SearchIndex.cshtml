@model IEnumerable<MVCEvidencijadodatnogobrazovanja.Models.Ustanova>

@{
    ViewBag.Title = "Pretraživač";
}

<h2>
    @ViewBag.Title
</h2>

<p>

    @using (Html.BeginForm("SearchIndex", "Ustanova", FormMethod.Get))
    {
    <p>
        Vrsta: @Html.DropDownList("ustanovaVrsta", null, "Sve", new { @class = "form-controlCustom" })
        Područje rada: @Html.TextBox("SearchString", null, new { @class = "form-controlCustom" })
        <input type="submit" value="Filtriraj" class="btnCustom btn-primary" />
    </p>
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OIB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PodrucjeRada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vrsta)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OIB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PodrucjeRada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vrsta)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.ID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.ID })
        </td>
    </tr>
}

</table>
